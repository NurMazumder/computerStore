<% layout('layout/boilerplate') %>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CONTACT US</title>
</head>

<body>
    <h1>CONTACT US</h1>
    <form action="/contact" class="validated-form" novalidate method="POST">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" name="email" required placeholder="Email...">
        </div>
        <div class="mb-3">
            <label for="order" class="form-label">Order Number</label>
            <input type="text" class="form-control" id="order" name="order" placeholder="Order number (optional)...">
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Message title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Message title..." required>
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Your message:</label>
            <br>
            <textarea rows="10" cols="70" id="message" name="message"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</body>

</html>