<% layout('layout/boilerplate') %>

    <body>
        <div class="container">
            <form action="/login" method="POST">
                <h1 class="mb-4">Login</h1>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="userInfo[email]">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="userInfo[password]">
                </div>
                <button class="btn btn-primary">Login</button>
            </form>
            <a href="/forgot-password" class="mt-3 d-block">Forgot password?</a>
        </div>
    </body>