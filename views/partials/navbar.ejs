<style>
    .search-bar {
        margin-right: 600px;  /* Adjust as needed */
         margin-top: 5px;    /* Adjust as needed */
    }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">GroupQ</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav me-auto">
                <a class="nav-link" href="/computerItems">Products</a>
                <a class="nav-link" href="/builds">Builds</a>
                <% if (currentUser && currentUser.role==='admin' ) { %>
                    <a class="nav-link" href="/computerItems/new">Add Product</a>
                <% } %>
            </div>

            <div class="col-md-3 text-end search-bar">
                <form method="GET" action="/search">
                    <input type="search" name="q" class="form-control" placeholder="Search..." aria-label="Search">
                </form>
            </div>  
            <ul class="navbar-nav ms-auto">
                <% if(!currentUser) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Register</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">Cart</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Management
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/account/<%= currentUser._id %>">Account</a>
                            <% if (currentUser && currentUser.role==='admin' ||  currentUser.role==='employee') { %>
                            <a class="dropdown-item" href="/manage">Application</a>
                            <a class="dropdown-item" href="/customer">Customer Management</a>
                            <% if (currentUser && currentUser.role==='admin') { %>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/employee">Employee Management</a>
                            <a class="dropdown-item" href="/memo">Memo</a>
                            <% } %>
                        </div>
                    </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
