<% layout('layout/boilerplate') %>
    <body>
        <div class="container">
            <form action="/register" method="POST">
                <h1 class="mb-4">Registration</h1>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="userInfo[name]">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="userInfo[email]">
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone No.</label>
                    <input type="tel" class="form-control" id="phone" name="userInfo[phone]">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="userInfo[password]">
                </div>
                <button class="btn btn-primary">Register</button>
            </form>
            <a href="/" class="mt-3 d-block">Back to Homepage</a>
        </div>
    </body>