<% layout('layout/boilerplate') %>

    <body>
        <div class="container">
            <form action="/login" method="POST">
                <h1 class="mb-4">LOGIN</h1>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Email..." name="userInfo[email]">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password..." name="userInfo[password]">
                </div>
                <button class="btn btn-primary">Login</button>
            </form>
        </div>
    </body>