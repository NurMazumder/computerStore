<h1>Search Results</h1>
<% if (products.length > 0) { %>
    <% products.forEach(function(product) { %>
        <h2>
            <a href="/computerItems/<%= product._id %>">
                <%= product.name %>
            </a>
        </h2>
        <img src="<%= product.imgURL %>" alt="<%= product.name %>">
        <p><%= product.description %></p>
    <% }) %>
<% } else { %>
    <p>No results found</p>
<% } %>
