<% layout('layout/boilerplate') %>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order</title>
</head>

<body>
    <h1>THANK YOU!</h1>
    <h2>ORDER NUMBER: <%= thisOrder._id %></h2>
    <h2>YOUR ITEMS:</h2>
    <% for(let item of thisOrder.order) { %>
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-image">
                    <img src="<%= item.imgURL %>"
                        class="card-img-top img-fluid square-image"
                        alt="<%= item.name %>">
                </div>
                <div class="card-header">
                    <h5 class="card-title">
                        <%= item.name %>
                    </h5>
                </div>
            </div>
    </div>
    <% } %>
    <div class="card mb-4"> 
        <div class="card-body">
            <h2> ORDER TOTAL: $<%= thisOrder.total %> </h2>
        </div>
    </div>
</body>

</html>